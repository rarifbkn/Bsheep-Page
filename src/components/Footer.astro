---
import MapIcon from "@/icons/MapsIcon.astro";
---

<footer>
  <div class="footer-container">
    <div class="footer-logo">
      <img
        src="https://mnntrmrwimkrypgfmcww.supabase.co/storage/v1/object/public/bsheep-bucket/logos/white%20logo%20bsheep.png"
        alt="Logo BSheep"
      />
    </div>
    <div class="footer-links">
      <section class="footer-section">
        <h2>Acerca de</h2>
        <ul>
          <li><a href="/delivery">Envíos</a></li>
          <li><a href="/diseños">Diseños</a></li>
        </ul>
      </section>
    </div>
    <span class="footer-divider"></span>
    <div class="footer-bottom">
      <p class="footer-location"><MapIcon /> <span>Coquimbo</span>, Chile</p>
      © 2024 BSheep™. Todos los derechos son reservados.
    </div>
  </div>
</footer>
<!-- --font-size-sm: 14px;
--font-size-md: 16px;
--font-size-lg: 18px; -->
<style>
  .footer-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    background-color: #000000;
    color: #808080;
    padding: 2rem 1rem;
    font-size: 1rem;
  }

  h2 {
    color: #ffffff;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .footer-logo img {
    width: 700px;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem; /* Espaciado entre enlaces */
  }

  .footer-section a {
    color: #808080;
    text-decoration: none;
    font-size: 1rem;
  }
  .footer-section a:hover {
    color: #ffffff;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100%;
    text-align: center;
  }

  .footer-divider {
    width: 100%;
    height: 1.5px;
    background-color: #808080;
  }

  .footer-bottom {
    letter-spacing: 1px;
    padding: 0 1rem;
    p {
      line-height: 2.5rem;
    }
  }

  .footer-location span {
    color: #eebe10;
  }

  @media (width <= 700px) {
    .footer-container {
      min-height: 100vh;
      min-width: 100vw;
      justify-content: center;
      flex-direction: column;
    }

    .footer-logo img {
      width: 350px;
    }
  }
</style>
